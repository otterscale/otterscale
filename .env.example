# Environment Configuration File for OtterScale Application
# This file contains all the necessary environment variables for running the OtterScale service
# Copy this file to .env and modify the values according to your deployment environment

# APPLICATION VERSION SECTION
# =============================================================================
# APP_VERSION: Current version of the OtterScale application
#              Used for display purposes and version tracking

APP_VERSION=latest

# =============================================================================
# DATABASE SECTION
# =============================================================================
# PostgreSQL database connection settings
# POSTGRES_DB: Name of the database to connect to
# POSTGRES_USER: Database username for authentication
# POSTGRES_PASSWORD: Database password for authentication

POSTGRES_DB=otterscale
POSTGRES_USER=otterscale
POSTGRES_PASSWORD=your_secure_password_here

# =============================================================================
# SERVICE SECTION
# =============================================================================
# SERVICE_PORT: Port number on which the backend API service will run
# PUBLIC_API_URL: External URL for the API service accessible by the frontend
#                 Must include protocol (http/https) and port number
#                 Replace IP address with your server's actual IP or domain
# CONFIG_VOLUME_PATH: Path to mount the config.yaml file for service configuration
#                     This should point to the directory containing your config.yaml

SERVICE_PORT=8299
PUBLIC_API_URL=http://localhost:8299 # https://otterscale-service.example.com
CONFIG_VOLUME_PATH=./otterscale.yaml

# =============================================================================
# WEB APPLICATION SECTION
# =============================================================================
# WEB_PORT: Port number on which the frontend web application will run
# PUBLIC_URL: External URL for the web application accessible by end users
#             This URL is critical for proper CORS configuration and OAuth redirects
#             Must match the actual URL users will use to access the application

WEB_PORT=3000
PUBLIC_URL=http://localhost:3000 # https://otterscale.example.com

# =============================================================================
# AUTHENTICATION SECTION
# =============================================================================
# AUTH_SECRET: Secret key used for JWT token signing and session management
#              Should be a cryptographically secure random string
# AUTH_TRUSTED_PROVIDERS: Comma-separated list of trusted authentication providers
# AUTH_OIDC_PROVIDER: OpenID Connect provider identifier

AUTH_SECRET=please_change_this_to_a_secure_random_string
AUTH_TRUSTED_PROVIDERS=otterscale,otterscale-oidc
AUTH_OIDC_PROVIDER=otterscale-oidc

# =============================================================================
# GITHUB OAUTH INTEGRATION
# =============================================================================
# GitHub OAuth application credentials for social login
# GITHUB_CLIENT_ID: OAuth App Client ID from GitHub Developer Settings
# GITHUB_CLIENT_SECRET: OAuth App Client Secret from GitHub Developer Settings

GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# =============================================================================
# SSO CONFIGURATION
# =============================================================================
# SSO_LOGIN_PROMPT: Enable/disable Single Sign-On login prompts
#                   Set to true to enable SSO login interface

SSO_LOGIN_PROMPT=false
